<% if book.errors.any? %>
<div id="error_explanation">
  <h2><%= book.errors.count %>errors prohibited this obj from being saved</h2>
  <ul>
   <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<div class="body">
  <div class="container">
    <div class="flash">
  <% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
</div>

    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <h2>User Info</h2>
              <div class="user-image">
                <%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
              </div>
              <table class="table table-striped">
                <tbody>
                  <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <th><%= @user.introduction %></th>
                  </tr>
                </tbody>
              </table>

              <div class="row">

                <% if @user.id == current_user.id %>
                <p><%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
              </p>
                <% else %>
                <p><%= link_to "", user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
              </p>
              <% end %>
              </div>

            <h2>New book</h2>
                <%= form_for (book) do |f| %>

                  <h4>Title</h4>
                  <%= f.text_field :title %>

                  <h4>Opinion</h4>
                  <%= f.text_field :body %>

                  <input type="submit" name="commit" value="Create Book" class="btn  btn-primary col-xs-12" data-disable-with="Create Book">

                <% end %>
            </div>
