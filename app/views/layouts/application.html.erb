<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
      <div class="container clearfix">
        <nav class="navbar-left">
          <span class="title">Bookers</span>
        </nav>

        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li class="list">
            <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-home home" %>
          </li>
          <li class="list">
            <%= link_to "Users", users_path, class:"glyphicon glyphicon-user users" %>
          </li>
          <li class="list">
            <%= link_to "Books", books_path, class:"glyphicon glyphicon-book books" %>
          </li>
          <li class="list">
            <%= link_to "logout", destroy_user_session_path, class:"glyphicon glyphicon-log-out logout" ,method: :delete %>
          </li>
          <% else %>
          <li>
            <a class="glyphicon glyphicon-home home" href="/">
            Home</a>
          </li>
          <li>
            <a class="glyphicon glyphicon-link about" href="/home/about"> About</a>
          </li>
          <li>
            <a class="glyphicon glyphicon-edit sign_up" href="/users/sign_up"> sign up</a>
          </li>
          <li>
            <a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a>
          </li>
          <% end %>
        </ul>
        </nav>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
