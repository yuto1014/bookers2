<%= render 'books/list', book: @book %>


<div class="col-xs-9">
  <h2>Books</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% if @books.present? %>
      <% @books.each do |book| %>
      <tr>
      <td><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "30x30" %>
      </td>
      <td><%= link_to "#{book.title}", book_path(book.id) %>
      </td>
      <td><%= book.body %></td>
      <td></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
